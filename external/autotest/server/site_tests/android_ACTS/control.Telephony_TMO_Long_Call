AUTHOR = 'bettyzhou, krisr'
NAME = 'android_ACTS.Telephony_TMO_Long_Voice'
TIME = 'LONG'
TEST_TYPE = 'Server'
ATTRIBUTES = 'suite:android_telephony_nightly_tmo'
DEPENDENCIES = 'carrier:tmobile'

DOC = """
This test runs telephony long voice call test against phone with T-mobile SIMs.
"""

def run(machine):
    job.run_test('android_ACTS',
                 testbed=hosts.create_testbed(machine),
                 config_file='android1758-telephony-test-station.config',
                 test_file='telephony_long_voice_tmo',
                 additional_configs=['simcard_list.json'],
                 acts_timeout=36000)

parallel_simple(run, machines)
